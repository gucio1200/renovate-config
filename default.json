{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":disableRateLimiting",
    "docker:enableMajor",
    ":enablePreCommit",
    "github>gucio1200/renovate-config:automerge-github-actions",
    "github>gucio1200/renovate-config:commit-message",
    "github>gucio1200/renovate-config:pr-labels",
    "github>gucio1200/renovate-config:semantic-commits",
    "github>gucio1200/renovate-config:custom-managers.json5"
  ],
  "timezone": "Europe/Warsaw",
  "dependencyDashboardTitle": "Renovate Dashboard",
  "suppressNotifications": ["prIgnoreNotification"],
  "commitBodyTable": true,
  "rebaseWhen": "auto",
  "platformCommit": true,
  "separateMultipleMinor": true,
  "separateMultipleMajor": true
}
